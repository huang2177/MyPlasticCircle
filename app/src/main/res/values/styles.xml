<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/color_red</item>
        <item name="toolbarStyle">@style/ClubToolbar</item>

        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <!--<item name="android:windowBackground">@drawable/launch_image</item>-->
        <!--<item name="android:colorControlNormal">@color/colorAccent</item>-->
    </style>

    <style name="SplashTheme">
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowBackground">@drawable/launch_image</item>
        <item name="android:windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="app_theme_transparent" parent="AppTheme">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowAnimationStyle">@null</item>
        <item name="android:colorBackgroundCacheHint">@null</item>

        <item name="android:backgroundDimAmount">0.8</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowIsFloating">true</item>
    </style>

    <style name="DetailedTheme" parent="AppTheme">
        <!--无进入动画-->
        <item name="android:windowAnimationStyle">@null</item>
    </style>


    <style name="navigationBar_text_style">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">@dimen/x70</item>
        <item name="android:textColor">@color/color_gray</item>
        <item name="android:layout_marginTop">3dp</item>
        <item name="android:layout_gravity">center</item>
    </style>


    <style name="setting_text_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical|right</item>
        <item name="android:drawablePadding">5dp</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <style name="myself_text_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16.0sp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_weight">1</item>
    </style>


    <style name="my_anim_out_in" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/myanim_in</item>
        <item name="android:windowExitAnimation">@anim/myanim_out</item>
    </style>


    <style name="my_anim_popou" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/myanim_popou_in</item>
        <item name="android:windowExitAnimation">@anim/myanim_popou_out</item>
    </style>

    <style name="my_theme_animation" parent="android:Theme.Dialog">
        <item name="android:windowAnimationStyle">@style/my_anim_out_in</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="themeTopAnimation" parent="android:Theme.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="loadind_dialog_style" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.4</item>
    </style>

    <style name="commondialog_style" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.6</item>
    </style>
    <!--dialog无标题-->
    <style name="FullHeightDialog" parent="android:style/Theme.Dialog"> 
        <item name="android:windowNoTitle">true</item>
        <item name="android:background">@android:color/white</item>
        <item name="android:windowBackground">@android:color/white</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="CalendarTitle">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/calendar_text_active</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CalendarCell.DayHeader">
        <item name="android:textColor">@color/calendar_text_active</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="CalendarCell">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <!--<item name="android:textAlignment">center</item>-->
    </style>

    <style name="CalendarCell.CalendarDate">
        <item name="android:textSize">16sp</item>
        <item name="android:background">@drawable/calendar_bg_selector</item>
        <item name="android:textColor">@color/calendar_text_selector</item>
        <item name="android:clickable">true</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="TabLayoutTextStyle" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textSize">16.0sp</item>
    </style>

    <style name="ClubToolbar" parent="Widget.AppCompat.Toolbar">
        <item name="contentInsetStart">0dp</item><!-- 设置该属性解决空白部分-->
    </style>

    <style name="ProgressHUD" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:backgroundDimAmount">0.5</item>
    </style>

    <style name="counterOverflowTextColor" parent="Base.TextAppearance.AppCompat.Widget.PopupMenu.Small">
        <item name="android:textColor">@color/color_black</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">14.0sp</item>
    </style>

    <style name="login_edittext">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:drawablePadding">5dp</item>
        <item name="android:textColor">@color/color_black</item>
        <item name="android:textColorHint">@color/color_content</item>
        <item name="android:textSize">16.0sp</item>
        <item name="android:textCursorDrawable">@drawable/text_cursor_shape</item>
        <item name="android:textSelectHandle">@drawable/textselecthandle</item>
        <item name="android:textSelectHandleLeft">@drawable/textselecthandle</item>
        <item name="android:textSelectHandleRight">@drawable/textselecthandle</item>
    </style>

    <style name="wd_zhc_edit_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:background">@null</item>
        <item name="android:textSize">14.0sp</item>
        <item name="android:textSelectHandle">@drawable/textselecthandle</item>
        <item name="android:textSelectHandleLeft">@drawable/textselecthandle</item>
        <item name="android:textSelectHandleRight">@drawable/textselecthandle</item>
        <item name="android:textCursorDrawable">@drawable/text_cursor_shape</item>
    </style>
</resources>
