<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/contact_top_ll"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/txl_listview_gd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <FrameLayout
            android:id="@+id/head_fl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp">

            <com.myplas.q.common.view.RoundCornerImageView
                android:id="@+id/xq_tx"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginBottom="7dp"
                android:layout_marginLeft="7dp"
                android:layout_marginRight="7dp"
                android:layout_marginTop="4dp"
                android:scaleType="fitCenter"
                android:src="@drawable/img_defaul_male"
                android:transitionName="shareView1" />

            <ImageView
                android:id="@+id/contact_sign_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="7dp"
                android:layout_marginLeft="7dp"
                android:layout_marginRight="7dp"
                android:layout_marginTop="4dp" />

            <ImageView
                android:id="@+id/xq_rz"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|right" />
        </FrameLayout>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="7dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txl_listview_info"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:textColor="@color/color_title_main"
                    android:textSize="15.0sp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/top_img"
                    android:layout_width="120px"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/icon_contact_up"
                    android:visibility="gone" />
            </LinearLayout>


            <TextView
                android:id="@+id/txl_listview_need"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:maxLines="1"
                android:textColor="@color/color_title_main"
                android:textSize="14.0sp" />

            <LinearLayout
                android:id="@+id/ll_heat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_popularity"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/tv_heat"
                        android:layout_width="wrap_content"
                        android:layout_height="66px"
                        android:fontFamily="sans-serif-medium"
                        android:paddingLeft="66px"
                        android:paddingTop="7dp"
                        android:textColor="#986700"
                        android:textSize="10.0sp" />
                </LinearLayout>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="1dp"
                    android:src="@drawable/icon_store_member" />

            </LinearLayout>


            <TextView
                android:id="@+id/txl_listview_product"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:drawablePadding="5dp"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:textColor="#999"
                android:textSize="14.0sp" />

        </LinearLayout>


        <ImageView
            android:id="@+id/contact_dial"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="10dp"
            android:src="@drawable/btn_dial" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@color/color_gray_divider_out" />
</LinearLayout>
