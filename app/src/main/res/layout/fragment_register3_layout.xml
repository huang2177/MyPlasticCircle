<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_white"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/register_img_success"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_gravity="center_horizontal" />

    <TextView
        android:id="@+id/register_tv_success"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:text="注册成功"
        android:textColor="@color/color_balank"
        android:textSize="16.0sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/register_level"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"
        android:layout_marginTop="20dp">

        <TextView
            android:id="@+id/register_info"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:drawableLeft="@drawable/icon_write"
            android:gravity="center_vertical"
            android:text="编辑资料" />

        <TextView
            android:id="@+id/register_look"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:drawableRight="@drawable/icon_right_arrow"
            android:gravity="right|center_vertical"
            android:text="随便看看" />
    </LinearLayout>


</LinearLayout>