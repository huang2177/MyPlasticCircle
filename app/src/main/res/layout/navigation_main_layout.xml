<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:id="@+id/layout_buttom"
              android:layout_width="match_parent"
              android:layout_height="60dp"
              android:background="#f6f6f6"
              android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="@color/color_lightgray"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">

            <LinearLayout
                android:id="@+id/buttom_linear_txl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/buttom_img_txl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/tabbar_contacts"/>

                <TextView
                    android:id="@+id/buttom_text_txl"
                    style="@style/navigationBar_text_style"
                    android:text="通讯录"/>
            </LinearLayout>

            <com.myplas.q.common.view.DragView
                android:id="@+id/dragview_contact"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:translationX="16dp"
                android:translationY="2dp"
                android:visibility="gone"
                app:bubbleColor="#ff0000"
                app:bubbleRadius="5dp"
                app:textColor="@color/color_white"
                app:textSize="9.0sp"/>
        </FrameLayout>

        <LinearLayout
            android:id="@+id/buttom_linear_fx"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/buttom_img_fx"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/tabbar_headlines"/>

            <TextView
                android:id="@+id/buttom_text_fx"
                style="@style/navigationBar_text_style"
                android:text="头条"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/buttom_linear_jia"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center">

            <ImageView
                android:id="@+id/buttom_img_jia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/tabbar_btn_release"
                android:transitionName="sharedView_Release"/>
        </LinearLayout>

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">

            <LinearLayout
                android:id="@+id/buttom_linear_gq"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/buttom_img_gq"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/tabbar_trade"/>

                <TextView
                    android:id="@+id/buttom_text_gq"
                    style="@style/navigationBar_text_style"
                    android:text="供求"/>
            </LinearLayout>

            <com.myplas.q.common.view.DragView
                android:id="@+id/dragview_supdem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:translationX="16dp"
                android:translationY="2dp"
                android:visibility="gone"/>
        </FrameLayout>

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">

            <LinearLayout
                android:id="@+id/buttom_linear_wd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/buttom_img_wd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/tabbar_me"/>

                <TextView
                    android:id="@+id/buttom_text_wd"
                    style="@style/navigationBar_text_style"
                    android:text="我的"/>
            </LinearLayout>

            <com.myplas.q.common.view.DragView
                android:id="@+id/dragview_myself"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:translationX="16dp"
                android:translationY="2dp"
                android:visibility="gone"/>
        </FrameLayout>

    </LinearLayout>

</LinearLayout>
