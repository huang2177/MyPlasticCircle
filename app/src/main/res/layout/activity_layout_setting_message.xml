<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/color_gray_bg"
              android:orientation="vertical">

    <include layout="@layout/common_layout_titlebar"></include>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="10dp">

        <ImageView
            android:layout_width="80px"
            android:layout_height="wrap_content"
            android:src="@drawable/sms_settings_icon_friends"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:text="关注我提醒"
            android:textColor="@color/color_balank"
            android:textSize="16.0sp"/>

        <com.myplas.q.common.view.SwitchButton
            android:id="@+id/message_switch_gz"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            app:sb_checkline_color="#05d61a"
            app:sb_checkline_width="0dp"
            app:sb_uncheckcircle_color="@color/color_white"
            app:sb_uncheckcircle_width="0dp"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/color_gray_divider_in" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="10dp">

        <ImageView
            android:layout_width="80px"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/sms_settings_icon_feedback"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="回复供求提醒"
            android:textColor="@color/color_balank"
            android:textSize="16.0sp"/>

        <com.myplas.q.common.view.SwitchButton
            android:id="@+id/message_switch_hf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            app:sb_checkline_color="#05d61a"
            app:sb_checkline_width="0dp"
            app:sb_uncheckcircle_color="@color/color_white"
            app:sb_uncheckcircle_width="0dp"/>
    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/color_gray_divider_in" />
</LinearLayout>