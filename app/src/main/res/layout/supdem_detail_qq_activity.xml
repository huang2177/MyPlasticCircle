<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_gray_bg"
    android:orientation="vertical">

    <include layout="@layout/common_layout_titlebar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/color_white"
                android:orientation="horizontal">

                <com.myplas.q.common.view.RoundCornerImageView
                    android:id="@+id/roundimagviewutil"
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:layout_margin="13dp"
                    android:scaleType="centerCrop" />

                <TextView
                    android:id="@+id/qq_number"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:gravity="center"
                    android:textColor="#171717"
                    android:textSize="16.0sp" />
            </LinearLayout>

            <include layout="@layout/supdem_detail_qq_baseinfo" />

            <include layout="@layout/supdem_detail_qq_otherinfo" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>
