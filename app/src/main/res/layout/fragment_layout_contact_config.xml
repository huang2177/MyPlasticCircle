<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/contact_config_ll"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_gray0"
    android:orientation="vertical">
    <!--app:layout_scrollFlags="scroll|enterAlways"-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp">

        <RelativeLayout
            android:id="@+id/relative_result_time"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1">

            <TextView
                android:id="@+id/contact_classify"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:drawablePadding="5dp"
                android:drawableRight="@drawable/down"
                android:gravity="center"
                android:text="店铺"
                android:textColor="@color/color_balank"
                android:textSize="16.0sp" />
        </RelativeLayout>

        <View
            android:layout_width="2px"
            android:layout_height="match_parent"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            android:background="@color/color_gray_divider_out" />

        <RelativeLayout
            android:id="@+id/relative_result_add"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:id="@+id/contact_region"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:drawablePadding="5dp"
                android:drawableRight="@drawable/down"
                android:gravity="center"
                android:text="全国"
                android:textColor="@color/color_balank"
                android:textSize="16.0sp" />
        </RelativeLayout>
    </LinearLayout>

    <View
        android:id="@+id/divider_result"
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="@color/color_gray_divider_out" />

</LinearLayout>