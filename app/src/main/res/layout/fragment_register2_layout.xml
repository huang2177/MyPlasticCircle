<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.myplas.q.common.view.MyEditText
        android:id="@+id/register_name"
        style="@style/login_edittext"
        android:layout_marginTop="15dp"
        android:background="@null"
        android:drawableLeft="@drawable/icon_username"
        android:hint="请填姓名"
        android:inputType="number"
        android:maxLength="11" />


    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:layout_marginTop="4dp"
        android:background="@color/color_red" />

    <com.myplas.q.common.view.MyEditText
        android:id="@+id/register_company"
        style="@style/login_edittext"
        android:layout_marginTop="31dp"
        android:background="@null"
        android:drawableLeft="@drawable/icon_companyname"
        android:hint="请填写公司名称"
        android:inputType="textPassword" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:layout_marginTop="4dp"
        android:background="@color/color_red" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:orientation="horizontal">

        <com.myplas.q.common.view.MyEditText
            android:id="@+id/register_type"
            style="@style/login_edittext"
            android:layout_weight="1"
            android:background="@null"
            android:drawableLeft="@drawable/icon_companytype"
            android:focusable="false"
            android:hint="请选择企业类型"
            android:inputType="textPassword" />

        <ImageView
            android:id="@+id/register_tv_indentify"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="@drawable/icon_more"
            android:textColor="@color/color_white" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:layout_marginTop="4dp"
        android:background="@color/color_red" />


    <Button
        android:id="@+id/register_ok"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="70dp"
        android:background="@drawable/login_btn_shape"
        android:text="登 录"
        android:textColor="@color/color_white"
        android:textSize="16.0sp" />
</LinearLayout>