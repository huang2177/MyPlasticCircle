<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/color_gray_divider_out"></View>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tradeorder_item_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/color_white"
                android:padding="10dp"
                android:textColor="@color/color_black" />

            <TextView
                android:id="@+id/tradeorder_item_zht"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/color_white"
                android:padding="10dp"
                android:textColor="@color/color_red"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/color_gray_divider_in"></View>

        <com.myplas.q.common.view.MyListview
            android:id="@+id/tradeorder_item_listview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:divider="@color/color_gray_divider_in"
            android:dividerHeight="1px">
        </com.myplas.q.common.view.MyListview>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/color_gray_divider_in"></View>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/tradeorder_item_num2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="共10吨"
                android:textColor="@color/color_gray"/>

            <TextView
                android:id="@+id/tradeorder_item_tprice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="  合计100000.05"
                android:textColor="@color/color_gray"/>

            <TextView
                android:id="@+id/tradeorder_item_feight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/color_gray"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/color_gray_divider_in"></View>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="30px"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/tradeorder_item_img1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                />

            <ImageView
                android:id="@+id/tradeorder_item_img2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>

            <ImageView
                android:id="@+id/tradeorder_item_img3"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/color_gray_divider_out"></View>

        <View
            android:id="@+id/tradeorder_item_divider"
            android:layout_width="match_parent"
            android:layout_height="28px"
            android:background="@color/color_gray_bg"></View>
    </LinearLayout>

    <TextView
        android:id="@+id/popou_layout_signed_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:alpha="0.8"
        android:background="@drawable/coner_signed"
        android:gravity="center"
        android:padding="15dp"
        android:textColor="#ffffff"
        android:textSize="16.0sp"
        android:visibility="gone"/>

</android.support.v7.widget.CardView>
